<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d87e7"
    tools:context=".hight_choose_gametest_Activity">

    <TextView
        android:id="@+id/Hihht_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="462dp"
        android:text="按開始喔"
        android:textColor="#fafafa"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/RGPP"
        android:layout_width="210dp"
        android:layout_height="117dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="72dp"
        android:textColor="#fafafa">

        <RadioButton
            android:id="@+id/Rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A:請按開始紐"
            android:textSize="20sp"
            android:textColor="#fafafa" />

        <RadioButton
            android:id="@+id/Rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="B:請按開始紐"
            android:textColor="#fafafa" />

        <RadioButton
            android:id="@+id/Rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="C:請按開始紐"
            android:textColor="#fafafa" />

        <RadioButton
            android:id="@+id/Rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="D:請按開始紐"
            android:textColor="#fafafa" />
    </RadioGroup>

    <Button
        android:id="@+id/Button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:onClick="hight_yes_or_no_button"
        android:text="確認鍵"
        android:textSize="20sp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/Hight_Time_Up_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Button" />

    <TextView
        android:id="@+id/textView69"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:text="TextView"
        android:textSize="25sp" />

</RelativeLayout>